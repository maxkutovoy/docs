{
    "python.terminal.activateEnvInCurrentTerminal": true,
    "files.trimTrailingWhitespace": true,
    "tabnine.experimentalAutoImports": true,
    "git.enableSmartCommit": true,
    "editor.lineHeight": 1.7,
    "editor.fontSize": 15,
    "window.zoomLevel": 0.4,
    "[nginx]": {
        "editor.defaultFormatter": "raynigon.nginx-formatter"
    },
    "editor.rulers": [
        79
    ],
    "editor.fontFamily": "'JetBrains Mono'",
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.iconTheme": "Monokai Classic Icons",
    "python.languageServer": "Pylance",
    "workbench.editorAssociations": {
        "*.docx": "onlyoffice-desktopeditors"
    },
    "open-in-browser.default": "firefox",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "cSpell.language": "en,ru",
    "projectManager.projectsLocation": "/home/max/projects/",
    "window.menuBarVisibility": "compact",
    "terminal.external.linuxExec": "gnome-terminal",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.enablePersistentSessions": false,
    "terminal.integrated.drawBoldTextInBrightColors": false,
    "terminal.integrated.fastScrollSensitivity": 3,
    "terminal.integrated.lineHeight": 1.3,
    "workbench.editor.enablePreview": true,
    "window.openFoldersInNewWindow": "off",
    "editor.wordWrap": "on",

    // убрать горизонтальную полосу прокрутки
    // "editor.scrollbar.horizontal": "hidden"
    // убрать миникарту
    // "editor.minimap.enabled": false
    // убрать отступ перед номерами строк
    "editor.glyphMargin": false,
    "window.openFilesInNewWindow": "on",
    "terminal.integrated.shellIntegration.enabled": true,
    "explorer.confirmDragAndDrop": false,
    // открывать vs code с пустой страницы
    "window.restoreWindows": "none",
    "explorer.confirmDelete": false,
    // перенос слов по ширине окна
    "editor.wrappingColumn": 0,
    // не принимать предложения по Enter
    "editor.acceptSuggestionOnEnter": "off",
    "markdownlint.config": {

    },
    "git.confirmSync": false,
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.fontFamily": "monospace",
    "telemetry.telemetryLevel": "off",
    "cSpell.userWords": [
        "createsuperuser",
        "Gunicorn",
        "kubectl",
        "Kubernetes",
        "makemigrations",
        "minikube",
        "nala",
        "runserver",
        "venv",
        "WSGI",
        "автодополнения",
        "Докеризированный",
        "хэшей"
    ],
    "redhat.telemetry.enabled": false,
    "vs-kubernetes": {
        "vscode-kubernetes.helm-path.linux": "/home/max/.local/state/vs-kubernetes/tools/helm/linux-amd64/helm"
    },
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "workbench.colorTheme": "Atom One Dark",

}
